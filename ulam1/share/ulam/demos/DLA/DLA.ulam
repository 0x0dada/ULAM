/**
   Diffusion Limited Aggregation demo.  Use with Res.
   \symbol DL
   \color #838
   \symmetries all

   \author Dave Ackley
   \license public-domain
*/
element DLA {
  //typedef DLA Self;
  EventWindow ew;
  Void behave() {
    if (ew[1] is Res) {
      Self kid;
      ew[1] = kid;  // Could be ew[1] = self; since DLA has no state.
      return;       // But this way we're sure to get a fresh atom.
    }
  }
}
